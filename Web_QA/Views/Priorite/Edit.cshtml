@model GestionAnomalies.Entities.Priorite

@{
    ViewData["Title"] = "Modifier la priorit√©";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["Title"]</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DateCreation" />
                    
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Libelle" class="form-label"></label>
                        <input asp-for="Libelle" class="form-control" />
                        <span asp-validation-for="Libelle" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Niveau" class="form-label"></label>
                        <input asp-for="Niveau" class="form-control" type="number" min="1" max="5" />
                        <span asp-validation-for="Niveau" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CodeCouleur" class="form-label"></label>
                        <input asp-for="CodeCouleur" class="form-control" type="color" />
                        <span asp-validation-for="CodeCouleur" class="text-danger"></span>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
