@model GestionAnomalies.Entities.Anomalie
@{
    ViewData["Title"] = "Modifier l'anomalie";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-sm-6"><h3 class="mb-0">Modifier l'anomalie</h3></div>
            <div class="col-sm-6 text-end">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Retour</a>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-warning card-outline">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Titre" class="form-label"></label>
                        <input asp-for="Titre" class="form-control" />
                        <span asp-validation-for="Titre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="ProjetId" class="form-label"></label>
                            <select asp-for="ProjetId" asp-items="ViewBag.Projets" class="form-select"></select>
                            <span asp-validation-for="ProjetId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="TypeAnomalieId" class="form-label"></label>
                            <select asp-for="TypeAnomalieId" asp-items="ViewBag.Types" class="form-select"></select>
                            <span asp-validation-for="TypeAnomalieId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="PrioriteId" class="form-label"></label>
                            <select asp-for="PrioriteId" asp-items="ViewBag.Priorites" class="form-select"></select>
                            <span asp-validation-for="PrioriteId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <button type="submit" class="btn btn-warning"><i class="bi bi-check2"></i> Mettre Ã  jour</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
