<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#0d6efd" />
    <title>Gestion Anomalies</title>

    <link rel="preload" href="~/css/adminlte.css" as="style" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@fontsource/source-sans-3@5.0.12/index.css" crossorigin="anonymous" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.11.0/styles/overlayscrollbars.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/adminlte.css" />
</head>
<body class="layout-fixed sidebar-expand-lg sidebar-open bg-body-tertiary">
<div class="app-wrapper">
    <nav class="app-header navbar navbar-expand bg-body">
        <div class="container-fluid">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                        <i class="bi bi-list"></i>
                    </a>
                </li>
                <li class="nav-item d-none d-md-block">
                    <a asp-controller="Home" asp-action="Index" class="nav-link">Accueil</a>
                </li>
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item dropdown user-menu">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img src="~/assets/img/user2-160x160.jpg" class="user-image rounded-circle shadow" alt="User" />
                            <span class="d-none d-md-inline">@User.Identity.Name</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                            <li class="user-header text-bg-primary">
                                <img src="~/assets/img/user2-160x160.jpg" class="rounded-circle shadow" alt="User" />
                                <p>
                                    @User.Identity.Name
                                    <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value</small>
                                </p>
                            </li>
                            <li class="user-footer">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="w-100 text-end">
                                    <button type="submit" class="btn btn-default btn-flat">Se deconnecter</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">Se connecter</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <aside class="app-sidebar bg-body-secondary shadow" data-bs-theme="dark">
        <div class="sidebar-brand">
            <a asp-controller="Home" asp-action="Index" class="brand-link">
                <img src="~/assets/img/AdminLTELogo.png" alt="Logo" class="brand-image opacity-75 shadow" />
                <span class="brand-text fw-semibold">Gestion Anomalies</span>
            </a>
        </div>
        <div class="sidebar-wrapper">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">
                            <i class="nav-icon bi bi-speedometer"></i>
                            <p>Tableau de bord</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Anomalie" asp-action="Index" class="nav-link">
                            <i class="nav-icon bi bi-exclamation-diamond"></i>
                            <p>Anomalies</p>
                        </a>
                    </li>
                    
                    @if (User.IsInRole("Administrateur") || User.IsInRole("Responsable"))
                    {
                        <li class="nav-item">
                            <a asp-controller="Projet" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-kanban"></i>
                                <p>Projets</p>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Administrateur"))
                    {
                        <li class="nav-header">ADMINISTRATION</li>
                        <li class="nav-item">
                            <a asp-controller="User" asp-action="Index" class="nav-link">
                                <i class="nav-icon bi bi-people"></i>
                                <p>Utilisateurs</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon bi bi-gear"></i>
                                <p>
                                    Référentiels
                                    <i class="nav-arrow bi bi-chevron-right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Statut" asp-action="Index" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Statuts</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Priorite" asp-action="Index" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Priorités</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="TypeAnomalie" asp-action="Index" class="nav-link">
                                        <i class="nav-icon bi bi-circle"></i>
                                        <p>Types d'anomalie</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item mt-3">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                <button type="submit" class="btn btn-outline-light w-100">Se deconnecter</button>
                            </form>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </aside>

    <main class="app-main">
        <div class="app-content">
            <div class="container-fluid pt-3">
                @RenderBody()
            </div>
        </div>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/overlayscrollbars@2.11.0/browser/overlayscrollbars.browser.es6.min.js" crossorigin="anonymous"></script>
<script src="~/js/adminlte.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
